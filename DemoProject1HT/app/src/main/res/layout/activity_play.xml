<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/sys_bg_play"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewScore"
        android:text="Score"
        android:textColor="#ff6338"
        android:textStyle="bold"
        android:background="@drawable/sys_corner"
        android:layout_gravity="right"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sys_ic_listen"
        android:layout_marginTop="70dp"
        android:id="@+id/imageViewPlay"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAnswer1"
            android:src="@drawable/sys_ic_empty"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:onClick="checkAnswer"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAnswer2"
            android:src="@drawable/sys_ic_empty"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:onClick="checkAnswer"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAnswer3"
            android:src="@drawable/sys_ic_empty"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="checkAnswer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswer1"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#1536da"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswer2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#1536da"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswer3"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#1536da"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCount"
        android:text=""
        android:gravity="left"
        android:textStyle="italic"
        android:textSize="15sp"/>

</LinearLayout>
